    <RelativeLayout
        android:id="@+id/rlAbout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlImg"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/rapport_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aboutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/rapport_cyan"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    />

                <LinearLayout
                    android:id="@+id/viewLine1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/rapport_light_gray"
                    android:layout_below="@id/aboutText"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewLine1"
                    android:text="Sourabh Chouhan"
                    android:textColor="@color/rapport_black"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:text="UserName"
                    android:textColor="@color/rapport_darkgrey"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/cvAbout"
            android:background="@color/rapport_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aboutNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number and status"
                    android:textColor="@color/rapport_cyan"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    />

                <LinearLayout
                    android:id="@+id/viewLine2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/rapport_light_gray"
                    android:layout_below="@id/aboutNo"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewLine2"
                    android:text="123456789"
                    android:textColor="@color/rapport_black"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tvMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phoneNo"
                    android:text="mobileNo"
                    android:textColor="@color/rapport_darkgrey"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    />

                <LinearLayout
                    android:id="@+id/viewLine3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/rapport_light_gray"
                    android:layout_below="@id/tvMobile"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewLine3"
                    android:text="Busy"
                    android:textColor="@color/rapport_black"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/status"
                    android:text="status"
                    android:textColor="@color/rapport_darkgrey"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

